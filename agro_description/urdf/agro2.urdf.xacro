<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot_name">

  <!-- ************************ -->
  <!--  variables -->
  <!-- ************************ -->
  <!--<xacro:property name="wheel_radius" value="0.0615"/>
  <xacro:property name="base_width" value="0.316"/>
  <xacro:property name="wheel_distance" value="0.225"/>-->


    <link name="base_link">

        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.5 0.316 0.16"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>

    </link>
    <xacro:macro name="wheel_link" params="prefix">
     <link name="${prefix}_wheel">
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.12" length="0.0615"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
     </link>
    </xacro:macro>

    <xacro:wheel_link prefix="front_left" />
    <xacro:wheel_link prefix="front_right" />
    <xacro:wheel_link prefix="near_left" />
    <xacro:wheel_link prefix="near_right" />

    <xacro:macro name="wheel_joint" params="prefix x y">
     <joint name="${prefix}_joint" type="continuous">
        <origin xyz="${x} ${y} 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="${prefix}_wheel"/>
        <axis xyz="0.0 0.1 0.0"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
     </joint>
    </xacro:macro>

    <xacro:wheel_joint prefix="front_left" x="0.225" y="${(0.0615 + 0.316)/2}" />
    <xacro:wheel_joint prefix="front_right" x="0.225" y="${-(0.0615 + 0.316)/2}" />
    <xacro:wheel_joint prefix="near_left" x="-0.225" y="${(0.0615 + 0.316)/2}" />
    <xacro:wheel_joint prefix="near_right" x="-0.225" y="${-(0.0615 + 0.316)/2}" />
    
</robot>